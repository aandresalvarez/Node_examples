extends ../layout.jade
block contenido
  div(class="col-md-5 center-block no-float top-space text-left")  
    h1  Editar Producto
    form(method="post" action="/menu/#{product.id}" style="margin-top:1.5em;" enctype="multipart/form-data")
      div(class="form-group")
        label Nombre
        input(type="text" name="title" value="#{product.title}" placeholder="Nombre del Producto" class="form-control")
      div(class="form-group")
        label Descripcion
        textarea(name="description"  placeholder="Descripcion del Producto" class="form-control")
         =product.description          
      div(class="form-group")
        label Costo
        input(type="number" name="pricing" value="#{product.pricing}" placeholder="Costo" class="form-control")
      div(class="form-group")
        label Imagen del Producto
        input(type="file" name="image_avatar"   class="form-control")    
      div(class="form-group")
        label Contraseña
        input(type="password" name="password"  placeholder="Contraseña" class="form-control")
      div(class="form-group text-right")
        input(type="submit" class="btn btn-info" value="Guardar")    